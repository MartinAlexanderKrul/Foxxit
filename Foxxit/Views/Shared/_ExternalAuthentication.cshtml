
@using (Html.BeginForm("ExternalLogin", "Account", FormMethod.Post, new { returnurl = @ViewData["ReturnUrl"] }))
{

    <button type="submit"><img class="img_button" value="google" name="provider" src="~/css/google_logo.png" alt="google" /></button>

    <button type="submit"><img class="img_button" value="facebook" name="provider" src="~/css/fb_logo.png" alt="facebook" /></button>

    <button type="submit"><img class="img_button" value="twitter" name="provider" src="~/css/twitter_logo.png" alt="twitter" /></button>
}
