
@using (Html.BeginForm("ExternalLogin", "Account", FormMethod.Post, new { returnurl = @ViewData["ReturnUrl"], @class = "img_button" }))
{

    <input type="hidden" value="google" name="provider" />
    <button class="img_button" type="submit"><img class="img_button" value="google" name="provider" src="~/assets/google_logo.png" alt="google" /></button>
}
