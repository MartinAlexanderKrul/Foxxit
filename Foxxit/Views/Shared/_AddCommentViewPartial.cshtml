@using Foxxit.Models.ViewModels
@model CreatingCommentViewModel

<div class="add_comment">
    <form asp-action="AddComment" asp-controller="Foxxit" method="post">
        <input class="form_input" type="text" name="text" />
        <input type="hidden" name="userId" value="@Model.CurrentUser.Id" />
        <input type="hidden" name="originalCommentId" value="@Model.OriginalCommentId" />
        <input type="hidden" name="postId" value="@Model.PostId" />
    </form>

    <button class="not_button bigger_button dark_button">CREATE</button>
</div>