@using Foxxit.Models.DTO;

@model PaginatedList<Foxxit.Models.Entities.Post>

@{ var prevDisabled = !Model.HasPreviousPage ? "hidden" : "";
    var nextDisabled = !Model.HasNextPage ? "hidden" : "";
    int pageNumsAmount = 3; }

<a asp-action="PaginationSample" asp-route-pageNum="1" class="btn btn-default">FIRST</a>
<a asp-action="PaginationSample" asp-route-pageNum="@(Model.CurrentPage - 1)" class="btn btn-default" prevDisabled>PREV</a>

@for (int i = (Model.CurrentPage - pageNumsAmount); i <= (Model.CurrentPage + pageNumsAmount); i++)
{
    if (Model.CurrentPage == i)
    {
        <a asp-action="PaginationSample" asp-route-pageNum="@Model.CurrentPage" class="btn btn-dark @prevDisabled @nextDisabled" prevDisabled>current: @Model.CurrentPage</a> 
    }
    else
    {
        if (i > 0 || i <= Model.TotalPages)
        {
            <a asp-action="PaginationSample" asp-route-pageNum="@i" class="btn btn-default @prevDisabled @nextDisabled" prevDisabled>@i</a> 
        }
    }
}

<a asp-action="PaginationSample" asp-route-pageNum="@(Model.CurrentPage + 1)" class="btn btn-default @nextDisabled" prevDisabled>NEXT</a>
<a asp-action="PaginationSample" asp-route-pageNum="@(Model.TotalPages)" class="btn btn-default">LAST</a>