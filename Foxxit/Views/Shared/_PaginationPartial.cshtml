@using Foxxit.Models.DTO;

@model PaginatedList<Foxxit.Models.Entities.Post>

@{ string prevDisabled = !Model.HasPreviousPage ? "button-disabled" : "";
   string nextDisabled = !Model.HasNextPage ? "button-disabled" : "";
   int pageNumsAmount = 3;
   int showPagesFrom = Model.CurrentPage - pageNumsAmount;
   int showPagesTo = Model.CurrentPage + pageNumsAmount; }

<a asp-action="PaginationSample" asp-route-pageNum="1" class="btn btn-default">FIRST</a>
<a asp-action="PaginationSample" asp-route-pageNum="@(Model.CurrentPage - 1)" class="btn btn-default @prevDisabled">PREV</a>

@for (int i = showPagesFrom; i <= showPagesTo; i++)
{
    if (i > 0 && i <= Model.TotalPages)
    {
        if (Model.CurrentPage == i)
            {
                <a asp-action="PaginationSample" asp-route-pageNum="@Model.CurrentPage" class="btn btn-dark">@Model.CurrentPage</a> 
            }
        else
            {
                <a asp-action="PaginationSample" asp-route-pageNum="@i" class="btn btn-default">@i</a> 
            }
    }
}

<a asp-action="PaginationSample" asp-route-pageNum="@(Model.CurrentPage + 1)" class="btn btn-default @nextDisabled">NEXT</a>
<a asp-action="PaginationSample" asp-route-pageNum="@(Model.TotalPages)" class="btn btn-default">LAST</a>